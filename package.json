{
  "name": "twitchmoments",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start-react\" \"npm run start-electron\"",
    "start-react": "npx serve -s ./react-project/dist -l 3000",
    "start-electron": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.example.app",
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "react-project/dist/",
        "to": "backend/build",
        "filter": ["**/*"]
      },
      {
        "from": "backend/twitchMomentsv3.exe",
        "to": "backend/twitchMomentsv3.exe"
      },
      {
        "from": "backend/.env",
        "to": "backend/.env"
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.3.5"
  },
  "dependencies": {
    "dependencies": "^0.0.1",
    "electron-log": "^5.1.7",
    "shell": "^0.9.6",
    "wait-on": "^7.2.0"
  }
}
