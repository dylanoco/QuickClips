{
  "name": "twitchmoments",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "concurrently  \"npm run start-electron\" --kill-others-on-fail",
    "start2": "concurrently \"npm run start-react\" \"npm run start-electron\"",
    "start-react": "npx serve -s ./react-project/dist -l 3000",
    "start-electron": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.example.app",
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "react-project/dist/",
        "to": "backend/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend/twitchMomentsv3.py",
        "to": "backend/twitchMomentsv3.py"
      },
      {
        "from": "backend/dbmethods.py",
        "to": "backend/dbmethods.py"
      },
      {
        "from": "backend/.env",
        "to": "backend/.env"
      },
      {
        "from": "backend/templates/auth.html",
        "to": "backend/templates/auth.html"
      }
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^7.6.0",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.14",
    "vite": "^5.3.5"
  },
  "dependencies": {
    "dependencies": "^0.0.1",
    "electron-log": "^5.1.7",
    "react-icons": "^5.4.0",
    "shell": "^0.9.6",
    "sonner": "^1.7.2",
    "wait-on": "^7.2.0"
  }
}
