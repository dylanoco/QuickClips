{
  "name": "twitchmoments",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "concurrently  \"npm run start-electron .\" --kill-others-on-fail",
    "start2": "concurrently \"npm run start-react\" \"npm run start-electron\"",
    "start-react": "npx serve -s ./react-project/dist -l 3000",
    "start-electron": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.example.app",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "**/*",
      "twitchMomentsv3.exe" 
    ],
    "extraResources": [
      {
        "from": "backend/dist/twitchMomentsv3.exe",
        "to": "backend/dist/twitchMomentsv3.exe"
      }
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^7.6.0",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.14",
    "vite": "^5.3.5"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "dependencies": "^0.0.1",
    "electron-log": "^5.1.7",
    "react-icons": "^5.4.0",
    "shell": "^0.9.6",
    "sonner": "^1.7.2",
    "wait-on": "^7.2.0"
  }
}
